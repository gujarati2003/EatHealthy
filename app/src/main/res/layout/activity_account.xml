<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="200dp"
        android:layout_height="90dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/eat_healthy_logo" />

    <TextView
        android:id="@+id/hi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/abril_fatface"
        android:layout_alignBottom="@id/logo"
        android:layout_marginBottom="-70dp"
        android:textSize="25dp"
        android:text="Hi Amy!"/>

    <Button
        android:id="@+id/favorites_btn"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/hi"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-190dp"
        android:backgroundTint="#006400"
        android:fontFamily="@font/abril_fatface"
        android:text="My Favorites"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:textStyle="bold" />
    <Button
        android:id="@+id/my_recipes_btn"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/favorites_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-90dp"
        android:backgroundTint="#006400"
        android:fontFamily="@font/abril_fatface"
        android:text="My Recipes"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:textStyle="bold" />
    <Button
        android:id="@+id/settings"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/my_recipes_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-90dp"
        android:backgroundTint="#006400"
        android:fontFamily="@font/abril_fatface"
        android:text="Settings"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:textStyle="bold" />

</RelativeLayout>