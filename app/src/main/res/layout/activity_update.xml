<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="200dp"
        android:layout_height="90dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/eat_healthy_logo" />

    <EditText
        android:id="@+id/recipe_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-28dp"
        android:fontFamily="@font/abril_fatface"
        android:textSize="16dp"
        android:text="Recipe Name" />

    <ImageView
        android:id="@+id/foodimg"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_alignBottom="@id/recipe_name"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-259dp"
        app:srcCompat="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/made_by"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/foodimg"
        android:layout_marginLeft="80dp"
        android:layout_marginBottom="-28dp"
        android:fontFamily="@font/abril_fatface"
        android:text="By: "
        android:textSize="12dp" />
    <TextView
        android:id="@+id/ingredients"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/made_by"
        android:layout_marginBottom="-28dp"
        android:layout_marginLeft="80dp"
        android:fontFamily="@font/abril_fatface"
        android:textSize="14dp"
        android:text="Ingredients:" />

    <!--    Ingredients will be added here in a textview, depends on how many-->
    <EditText
        android:id="@+id/ingredient_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ingredients"
        android:layout_marginBottom="-28dp"
        android:layout_marginLeft="80dp"
        android:fontFamily="@font/abril_fatface"
        android:textSize="12dp"
        android:text="1. " />


    <!--    Instructions will be added here in a textview, depends on how many-->
    <TextView
        android:id="@+id/direction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ingredient_num"
        android:layout_marginBottom="-28dp"
        android:layout_marginLeft="80dp"
        android:fontFamily="@font/abril_fatface"
        android:textSize="14dp"
        android:text="Directions:" />

    <EditText
        android:id="@+id/direction_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/direction"
        android:layout_marginBottom="-28dp"
        android:layout_marginLeft="80dp"
        android:fontFamily="@font/abril_fatface"
        android:textSize="12dp"
        android:text="1. " />

    <Button
        android:id="@+id/update_btn"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/direction_num"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:layout_marginBottom="-125dp"
        android:backgroundTint="#006400"
        android:fontFamily="@font/abril_fatface"
        android:text="Update"
        android:textAllCaps="false"
        android:textSize="25sp"
        android:textStyle="bold" />
</RelativeLayout>